<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportProblemActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_no_notificationicon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="@string/reportProblem"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="273dp"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        android:text="@string/reportProblemDesc"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextReportProblemTitle"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/edit_text_background_white"
        android:ems="10"
        android:inputType="text"
        android:hint="Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/editTextReportProblemDesc"
        android:layout_width="312dp"
        android:layout_height="178dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_background_white"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Write something..."
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextReportProblemTitle" />

    <Button
        android:id="@+id/buttonReportProblemSubmit"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/gt_blue"
        android:text="@string/submit"
        android:textSize="16dp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextReportProblemDesc" />

    <Button
        android:id="@+id/buttonReportProblemCancel"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/gt_red_cancel"
        android:text="Cancel"
        android:textSize="16dp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonReportProblemSubmit" />


</androidx.constraintlayout.widget.ConstraintLayout>